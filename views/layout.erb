<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Elevate - Sinatra ActiveRecord</title>
  <link rel="website icon" href="/images/icon.png">
  <link rel="stylesheet" href="/style.css">
</head>
<body style="background: black;">
  <nav class="flex">
    <a href="/"><img class="logo" src="/images/imdb.png"></a>
    <div class="menu">
      Menu
    </div>
    <div class="search-box flex">
      <input type="text" placeholder="Search IMDb">
      <img src="/images/search.png" class ="search-icon">
    </div>
    <% if user_signed_in? %>
      <a href="/logout">Logout</a>
      <a href="/profile"><img style="width: 50px; border-radius: 50%;" src="<%= current_user.avatar %>"></a>
    <% else %>
      <a href="/login">Sign In</a>
    <% end %> 
  </nav>
  <%= yield %>
</body>
</html>